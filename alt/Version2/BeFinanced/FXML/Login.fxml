<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200" prefWidth="300" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BeFinanced.LoginController">
   <children>
      <JFXTextField id="username" fx:id="usernameField" layoutX="50.0" layoutY="50.0" prefWidth="200.0" promptText="Username" AnchorPane.topAnchor="25.0">
         <font>
            <Font size="20.0" />
         </font>
      </JFXTextField>
      <JFXPasswordField id="password" fx:id="passwordField" layoutX="50.0" layoutY="100.0" onAction="#login" prefWidth="200.0" promptText="Password" AnchorPane.topAnchor="75.0">
         <font>
            <Font size="20.0" />
         </font>
      </JFXPasswordField>
      <JFXButton id="login" fx:id="loginButton" layoutX="192.0" layoutY="154.0" onAction="#login" text="Login" AnchorPane.leftAnchor="192.0" AnchorPane.topAnchor="135.0">
         <font>
            <Font size="15.0" />
         </font>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </JFXButton>
      <Label fx:id="tryAgainLabel" layoutX="50.0" layoutY="140.0" opacity="0.0" text="Try again">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
